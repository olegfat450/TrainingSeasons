<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTv1"
        android:layout_width="wrap_content"
        android:layout_height="56sp"
        android:layout_marginStart="12sp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />

    <TextView
        android:id="@+id/textTv2"
        android:gravity="center"
        android:layout_marginStart="12sp"
        android:layout_marginEnd="12sp"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginTop="20dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTv1" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageTv"
        android:layout_width="331dp"
        android:layout_height="270dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTv3"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imageTv"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/button1"
            android:layout_marginStart="8sp"
            android:layout_marginEnd="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/back" />

        <Button
            android:id="@+id/button2"
            android:layout_marginStart="4sp"
            android:layout_marginEnd="4sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="на главную" />

        <Button
            android:id="@+id/button3"
            android:layout_marginStart="4sp"
            android:layout_marginEnd="8sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/forvard" />
    </LinearLayout>

    <TextView
        android:id="@+id/textTv3"
        android:layout_width="wrap_content"
        android:layout_height="32sp"
        android:layout_marginTop="9dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTv2" />


</androidx.constraintlayout.widget.ConstraintLayout>